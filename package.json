{
  "name": "react-starter-kit",
  "version": "0.1.0",
  "description": "React starter kit based on (styled-component, redux, redux-saga, ...)",
  "author": "samsam-ahmadi",
  "license": "MIT",
  "repository": "samsam-ahmadi/react-starter-kit",
  "dependencies": {
    "immutability-helper": "^3.0.1",
    "node-sass": "^4.12.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.1",
    "styled-components": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged "
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config .prettierrc --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^3.0.8",
    "prettier": "^1.18.2"
  }
}
